[flake8]
max-line-length = 88
extend-ignore = E203, W503
exclude = 
    .git,
    __pycache__,
    build,
    dist,
    .venv,
    .eggs,
    .pytest_cache,
    .mypy_cache,
    .tox

# Ignore undefined name errors for test files and utility scripts
# These contain many placeholder variables that are intentionally undefined
per-file-ignores =
    quality-tests-complete.py:F821
    fix_all_linting_issues.py:F821
    fix_flake8_issues.py:F821
    fix_pylint_issues.py:F821
    check_remaining_issues.py:F821
    modular_web_interface.py:F821
    modular-web-interface.py:F821
    modular_core.py:F821
    modular-core-logger.py:F821